@{
    ViewData["Title"] = "Beautify JavaScript Online";
}

<div class="page-header">
    <h1>Beautify JavaScript: <small>Format JavaScript Online</small></h1>
</div>

@{await Html.RenderPartialAsync("_OnlineToolsSharedDOM");}


@section Styles{
    @{await Html.RenderPartialAsync("_CodeMirrorStyles");}
}

@section Scripts {
    @{await Html.RenderPartialAsync("_OnlineToolsScripts");}
    @{await Html.RenderPartialAsync("_CodeMirrorScripts");}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/js-beautify/1.11.0/beautify.min.js"></script>

    <script type="text/javascript">
        function getLanguage() {
            return "javascript";
        }

        function doFormatImpl() {
            return js_beautify(document.getElementById(raw_input_element_name).value);
        }
    </script>
}